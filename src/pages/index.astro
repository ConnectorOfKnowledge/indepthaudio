  <!-- ═══════════════════════════════════════════════════════
       JAVASCRIPT: Nav · Mobile Menu · Parallax · Scroll Anim
  ═══════════════════════════════════════════════════════ -->
  <script>
    // ── Nav scroll behavior ──────────────────────────────────
    const nav = document.getElementById('main-nav') as HTMLElement | null;

    window.addEventListener('scroll', () => {
      if (!nav) return;
      if (window.scrollY > 60) {
        nav.classList.add('nav-scrolled');
        nav.style.padding = '1rem 0';
      } else {
        nav.classList.remove('nav-scrolled');
        nav.style.padding = '1.5rem 0';
      }
    }, { passive: true });

    // ── Mobile menu toggle ───────────────────────────────────
    const mobileBtn  = document.getElementById('mobile-menu-btn') as HTMLButtonElement | null;
    const mobileMenu = document.getElementById('mobile-menu') as HTMLElement | null;
    let menuOpen = false;

    mobileBtn?.addEventListener('click', () => {
      menuOpen = !menuOpen;
      if (mobileMenu) {
        mobileMenu.style.maxHeight = menuOpen ? '400px' : '0';
      }
      mobileBtn.setAttribute('aria-expanded', String(menuOpen));
    });

    mobileMenu?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        menuOpen = false;
        if (mobileMenu) mobileMenu.style.maxHeight = '0';
        mobileBtn?.setAttribute('aria-expanded', 'false');
      });
    });

    // ── Hero background parallax ─────────────────────────────
    const heroBg = document.getElementById('hero-bg') as HTMLElement | null;

    // Trigger loaded class for scale-in on page load
    requestAnimationFrame(() => {
      heroBg?.classList.add('loaded');
    });

    window.addEventListener('scroll', () => {
      if (!heroBg) return;
      const scrolled = window.scrollY;
      const heroHeight = heroBg.parentElement?.offsetHeight ?? window.innerHeight;
      if (scrolled < heroHeight) {
        heroBg.style.transform = `scale(1) translateY(${scrolled * 0.25}px)`;
      }
    }, { passive: true });

    // ── Intersection Observer: scroll-triggered animations ───
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.12, rootMargin: '0px 0px -60px 0px' }
    );

    document.querySelectorAll('.fade-up, .fade-in').forEach(el => observer.observe(el));
  </script>

